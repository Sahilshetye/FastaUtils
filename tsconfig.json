{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "watch": true,
    "outDir": "bin",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib":false ,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true
  },
  
  "include": [
    "./lib"
  ],
  "exclude": [
    "node_modules"
  ],
  "baseUrl": "types",
  "typeRoots": ["types"]
}